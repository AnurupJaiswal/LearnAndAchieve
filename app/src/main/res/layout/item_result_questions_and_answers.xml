<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemQuestionRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvQuestionHeader"
            android:layout_width="0dp"
            android:layout_weight="0.5"

            android:layout_height="wrap_content"
            android:text="Question 1"
            android:fontFamily="@font/gilroy_semibold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAnswerStatus"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:text="Answer Status"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample question text"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_semibold"
        android:layout_marginTop="8dp" />


    <LinearLayout
        android:id="@+id/llOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSolutionToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solution: Hide"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:drawableStartCompat="@drawable/ic_bulb" />

    <!-- Solution text -->
    <TextView
        android:id="@+id/tvSolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solution text here"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:fontFamily="@font/gilroy_medium"
        android:layout_marginTop="4dp" />
</LinearLayout>
