                android:textSize="11sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
android:layout_alignEnd="@+id/tvChangePass"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_change_password"
                app:tint="@color/primaryColor" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="#f0ecec" />

        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">


            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"

                android:includeFontPadding="false"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfile"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gilroy_regular"
                android:includeFontPadding="false"
                android:maxLines="1"

                android:text="Manage Your Details And Preference In Your Profile !"
                android:textSize="11sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
 android:layout_alignEnd="@+id/tvProfile"
                android:src="@drawable/ic_profile_orange"
                app:tint="@color/primaryColor" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="#f0ecec" />


        <RelativeLayout
            android:id="@+id/rlDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:includeFontPadding="false"
                android:text="Delete Account"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDelete"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@+id/ic_Delete"
                android:fontFamily="@font/gilroy_regular"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Take control of your data—easily delete your account anytime."
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/ic_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignEnd="@+id/tvDelete"
                android:layout_marginEnd="@dimen/_10sdp"

                android:src="@drawable/ic_delete_bin"
                app:tint="@color/primaryColor" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBEBEB"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlJoinAndEarn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tvJoinAndEarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"

                    android:includeFontPadding="false"
                    android:text="Join and Earn"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvJoinAndEarn"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="Join Now And Start Earning Rewards For Your Learning!"
                    android:textSize="11sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignEnd="@id/tvJoinAndEarn"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_join_earn"
                    app:tint="@color/primaryColor" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#DADADA" />


            <RelativeLayout
                android:id="@+id/rlBharatSATScholar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tvBharatSATScholar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"

                    android:includeFontPadding="false"
                    android:text="Bharat-SAT ScholarShip"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvBharatSATScholar"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/gilroy_regular"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="The Bharat SAT Scholarship And Unlock Your Potential!"
                    android:textSize="11sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignEnd="@id/tvBharatSATScholar"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_bharat_scholor"
                    app:tint="@color/primaryColor" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="#DADADA" />


