                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignEnd="@id/tvBharatSAT"

                    android:src="@drawable/ic_bharat_sat"
                    app:tint="@color/primaryColor" />
            </RelativeLayout>

