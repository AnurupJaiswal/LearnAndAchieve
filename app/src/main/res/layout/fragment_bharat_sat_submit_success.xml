<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".main_package.ui.fragment.BharatSatSubmitSuccessFragment">

    <ImageView
        android:id="@+id/ivSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/submit_success"
 android:layout_centerVertical="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_weight="1.2"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="start"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/ivSubmit"
        android:layout_centerInParent="true"
        android:text="Exam Submitted Successfully!"
        android:textColor="#368C36"
        android:textSize="@dimen/_18sdp" />



</RelativeLayout>