<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_margin="16dp"
    android:background="@drawable/curve_background">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiple Device Login"
        android:textSize="18sp"
        android:paddingVertical="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:background="@color/lightBg"
        android:gravity="center"
      />

    <!-- Image -->
    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:src="@drawable/multiple_device"
        android:scaleType="fitXY"
        android:contentDescription="Device Image"
        android:layout_gravity="center"
       />

    <!-- Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are logged in on another device. Do you want to continue on this device?"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_gravity="center"
        android:fontFamily="@font/gilroy_semibold"
        />

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ Chrome On Windows ]"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_bold"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/blue"
        android:layout_gravity="center"
      />




            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mccLogoutFromDevices"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="@dimen/_7sdp"
                app:strokeWidth="0dp">

                <TextView
android:id="@+id/tvLogutDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_semibold"
                    android:includeFontPadding="false"


                    android:text="Log out from other device"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvCancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_7sdp"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="1.dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_semibold"
                    android:includeFontPadding="false"


                    android:text="Cancel"
                    android:textColor="@color/primaryColor"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
