<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/curve_background"
    android:orientation="vertical"
    android:padding="16dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1B00FFFF"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Multiple Device Login"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:contentDescription="Device Image"
                android:scaleType="fitXY"
                android:src="@drawable/multiple_device" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="You are logged in on another device. Do you want to continue on this device?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDeviceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_bold"
                android:paddingVertical="@dimen/_5sdp"
                android:text="[ Chrome On Windows ]"
                android:textColor="@color/blue"
                android:textSize="16sp" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mccLogoutFromDevices"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="@dimen/_7sdp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tvLogutDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_semibold"
                    android:includeFontPadding="false"


                    android:text="Log out from other device"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvCancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:gravity="end"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_7sdp"
                app:strokeColor="@color/primaryColor"
                app:strokeWidth="1.dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_semibold"
                    android:includeFontPadding="false"


                    android:text="Cancel"
                    android:textColor="@color/primaryColor"
                    android:textSize="16sp" />
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>


