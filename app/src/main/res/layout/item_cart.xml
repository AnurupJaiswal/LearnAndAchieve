<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="0dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="#FFF0F0"
        app:cardCornerRadius="10dp"
        app:strokeWidth="0dp">


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="100dp"
            android:layout_height="80dp"

            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/book" />


    </com.google.android.material.card.MaterialCardView>


    <!-- Product Title -->
    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_toStartOf="@+id/mcvDelete"
        android:layout_toEndOf="@id/mcvProduct"
        android:maxLines="2"
        android:minLines="2"
        android:text="BHARAT SAT EXAM  3 Mock Test"
        android:textSize="16sp"
      android:fontFamily="@font/gilroy_bold"/>

    <!-- Discounted Price -->
    <TextView
        android:id="@+id/itemDiscountedPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitle"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/mcvProduct"
        android:fontFamily="@font/gilroy_bold"
        android:includeFontPadding="false"
        android:text="₹ 1359"

        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Original Price (Strikethrough) -->
    <TextView
        android:id="@+id/itemOriginalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemTitle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/itemDiscountedPrice"
        android:text="₹ 1599"
        android:fontFamily="@font/gilroy_regular"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="#FFF0F0"
        app:cardCornerRadius="4dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"
            android:padding="7dp"

            android:src="@drawable/ic_delete_bin" />
    </com.google.android.material.card.MaterialCardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightBg"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/mcvProduct" />
</RelativeLayout>
