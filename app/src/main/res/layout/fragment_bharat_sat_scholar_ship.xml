<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_package.ui.fragment.BharatSatScholarShipFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/bhart_sta_banner" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/gilroy_semibold"
            android:includeFontPadding="false"
            android:minLines="2"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Empowering Minds, Celebrating Excellence"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPackage"
            android:fontFamily="@font/gilroy_regular"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="Welcome to the BHARAT SAT Examination, an extraordinary national-level initiative spanning 300 carefully chosen districts, where internet connectivity thrives. Our mission extends far beyond assessment â€“ we're dedicated to recognizing and honoring academic brilliance while empowering the brightest minds across our nation."
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightBg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gilroy_semibold"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Reward and Scholarships"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                android:layout_margin="@dimen/_8sdp"
    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tvStandardSelection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/gilroy_semibold"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="Srandard 10 "
                        android:textColor="@color/primaryColor"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/ivExpandCollapse"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_downarrow"
                        app:tint="@color/black" />


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/McvSelectStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/lightBg"
                app:cardCornerRadius="@dimen/_5sdp"
                app:strokeWidth="0dp"

                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RcvSelectStandard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"

                    tools:itemCount="3"
                    tools:listitem="@layout/item_standard_selaction">

                </androidx.recyclerview.widget.RecyclerView>


            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gilroy_semibold"
                android:includeFontPadding="false"

                android:paddingHorizontal="@dimen/_10sdp"
                android:text="District Level"
                android:textColor="@color/blue"
                android:textSize="14sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:itemCount="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/gilroy_semibold"
                android:includeFontPadding="false"

                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Taluka Level"
                android:textColor="@color/blue"
                android:textSize="14sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTaluka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:itemCount="3"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pastelYellow"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="Transforming Education, Empowering Futures Welcome to the Bharat Sat Scholarship Program!"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" /> <!-- Ensure readable text color -->

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:contentDescription="Bharat Sat Scholarship Trophy"
                    android:src="@drawable/sat3dtrophy" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/gilroy_regular"
                android:lineSpacingExtra="2dp"
                android:text="At Learn and Achieve Edutech, we firmly believe that acknowledging and rewarding merit is pivotal in sculpting a brighter future for our nation. The BHARAT SAT Examination's rewards program is a testament to our commitment to nurturing talent and supporting academic achievement, both at the district and national levels. Join us in celebrating brilliance and shaping a prosperous tomorrow!"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_semibold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Scholarship Distribution"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvScholarshipDistribution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/item_expandable_card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="At Learn and Achieve Edutech, we firmly believe that acknowledging and rewarding merit is pivotal in sculpting a brighter future for our nation. The BHARAT SAT Examination's rewards program is a testament to our commitment to nurturing talent and supporting academic achievement, both at the district and national levels. Join us in celebrating brilliance and shaping a prosperous tomorrow!"
            android:textSize="11sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/gilroy_semibold"
                android:includeFontPadding="false"
                android:text="Key Highlights"
                android:paddingVertical="@dimen/_10sdp"
                android:textSize="14sp" />


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="@dimen/_10sdp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pastelYellow60"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:includeFontPadding="false"
                            android:text="01."
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="All India Level Examination:"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="BHARAT SAT is an examination that spans the entire nation, bringing students from every corner of the country together in the pursuit of knowledge and excellence."
                        android:textColor="#2A2A2A"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightBg"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:includeFontPadding="false"
                            android:text="02."
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="For 5th to 10 Classes:"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="We believe that nurturing talent should begin at an early age. BHARAT SAT is designed to cater to students from 5th to 10th standard, ensuring inclusivity and equal opportunity for all."
                        android:textColor="#2A2A2A"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pastelYellow60"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:includeFontPadding="false"
                            android:text="03."
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Monthly Scholarships:"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="BHARAT SAT goes beyond traditional assessments by rewarding the top-performing students at various levels, including District, State, and National. Detailed information on the awards can be found separately."
                        android:textColor="#2A2A2A"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pastelYellow60"

                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:includeFontPadding="false"
                            android:text="04."
                            android:textSize="25sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Competitive and Diagnostic:"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="BHARAT SAT is not just about competition. It also serves as a diagnostic tool, helping students identify their strengths and areas for improvement. This dual nature of the examination makes it a valuable educational resource."
                        android:textColor="#2A2A2A"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>