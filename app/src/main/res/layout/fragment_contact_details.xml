<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_10sdp">




    <EditText
        android:id="@+id/etEmail"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="14sp"
        app:hintEnabled="false"
        android:inputType="textEmailAddress"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:paddingVertical="@dimen/_13sdp"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Email"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvErrorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:visibility="gone" />
    </LinearLayout>



    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:maxLines="1"
        android:inputType="phone"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:paddingVertical="@dimen/_13sdp"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Phone Number"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvErrorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:visibility="gone" />
    </LinearLayout>




    <EditText
        android:id="@+id/etAddressLineOne"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:hintEnabled="false"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingVertical="@dimen/_13sdp"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Address Line-1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvErrorAddressLineOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:visibility="gone" />
    </LinearLayout>



    <EditText
        android:id="@+id/etAddressLineTwo"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:hintEnabled="false"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingVertical="@dimen/_13sdp"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Address Line-2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvErrorAddressLineTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:includeFontPadding="false"
            android:visibility="gone" />
    </LinearLayout>



    <EditText
        android:id="@+id/etState"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingVertical="@dimen/_13sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:fontFamily="@font/gilroy_regular"
        android:hint="State"
        android:drawableEnd="@drawable/ic_downarrow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/tvErrorState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/etDistrict"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingVertical="@dimen/_13sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:fontFamily="@font/gilroy_regular"
        android:hint="District"
        android:drawableEnd="@drawable/ic_downarrow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvErrorDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>
    <EditText
        android:id="@+id/etTaluka"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingVertical="@dimen/_13sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Taluka"
        android:drawableEnd="@drawable/ic_downarrow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvErrorTaluka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>
    <EditText
        android:id="@+id/etPincode"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:paddingVertical="@dimen/_13sdp"
        android:singleLine="true"
        android:maxLines="1"
        android:visibility="gone"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:fontFamily="@font/gilroy_regular"
        android:hint="Pincode"
        android:drawableEnd="@drawable/ic_downarrow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/tvErrorPincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/empty_error"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>




    <CheckBox
        android:id="@+id/checkboxTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/gilroy_medium"
        android:textSize="13sp"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:background="@android:color/transparent"

        android:layout_marginBottom="@dimen/_10sdp"
android:text="By submitting this form, I agree that all information provided is true and accurate. Any false information may result in disqualification."
        />

</LinearLayout>
